{
  "extends": ["next/core-web-vitals", "eslint:recommended", "prettier", "plugin:import/recommended"],
  // Using the unused imports package to autofix unused imports
  "plugins": ["unused-imports", "import"],
  "rules": {
    "unused-imports/no-unused-imports": "error",
    "no-unused-vars": [
      "error", {
        "varsIgnorePattern": "^_",
        "argsIgnorePattern": "^_"
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "typescript": true,
      "node": true
    }
  }
}
